# NovaCoin Explorer - Mainnet Configuration

# === Network Settings ===
NETWORK=NovaCoin
SUBNETWORK=Mainnet
CHAIN_ID=9000

# === RPC Endpoints ===
# Replace with your mainnet node endpoints
ETHEREUM_JSONRPC_HTTP_URL=http://node.novacoin.io:8545
ETHEREUM_JSONRPC_WS_URL=ws://node.novacoin.io:8546
ETHEREUM_JSONRPC_TRACE_URL=http://node.novacoin.io:8545

# === JSON-RPC Settings ===
ETHEREUM_JSONRPC_VARIANT=geth
ETHEREUM_JSONRPC_TRANSPORT=http
ETHEREUM_JSONRPC_PENDING_TRANSACTIONS_TYPE=geth

# === Display Settings ===
COIN=NOVA
COIN_NAME=NovaCoin
SHOW_TESTNET_LABEL=false

# === Feature Flags ===
DISABLE_EXCHANGE_RATES=false
SHOW_PRICE_CHART=true
RE_CAPTCHA_DISABLED=false

# === Rate Limits (strict for mainnet) ===
API_RATE_LIMIT=50
API_RATE_LIMIT_BY_KEY=100

# === Indexer Settings ===
INDEXER_DISABLE_PENDING_TRANSACTIONS_FETCHER=false
INDEXER_DISABLE_INTERNAL_TRANSACTIONS_FETCHER=false
FETCH_REWARDS_WAY=trace_block

# === Block Settings ===
FIRST_BLOCK=0
BLOCK_RANGES_BATCH_SIZE=50

# === Frontend ===
BLOCKSCOUT_HOST=explorer.novacoin.io
BLOCKSCOUT_PROTOCOL=https

# === Security (Production) ===
LOG_LEVEL=info
SHOW_ADDRESS_MARKETCAP_PERCENTAGE=true

# === Exchange Rate Source ===
EXCHANGE_RATES_SOURCE=coingecko
EXCHANGE_RATES_COINGECKO_COIN_ID=novacoin
EXCHANGE_RATES_COINGECKO_API_KEY=

# === SSL/TLS ===
HTTPS_ENABLED=true
