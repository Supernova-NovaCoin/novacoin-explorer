# NovaCoin Explorer - Testnet Configuration

# === Network Settings ===
NETWORK=NovaCoin Testnet
SUBNETWORK=Testnet
CHAIN_ID=9001

# === RPC Endpoints ===
ETHEREUM_JSONRPC_HTTP_URL=http://host.docker.internal:8545
ETHEREUM_JSONRPC_WS_URL=ws://host.docker.internal:8546
ETHEREUM_JSONRPC_TRACE_URL=http://host.docker.internal:8545

# === JSON-RPC Settings ===
ETHEREUM_JSONRPC_VARIANT=geth
ETHEREUM_JSONRPC_TRANSPORT=http
ETHEREUM_JSONRPC_PENDING_TRANSACTIONS_TYPE=geth

# === Display Settings ===
COIN=NOVA
COIN_NAME=NovaCoin
SHOW_TESTNET_LABEL=true

# === Feature Flags ===
DISABLE_EXCHANGE_RATES=true
SHOW_PRICE_CHART=false
RE_CAPTCHA_DISABLED=true

# === Rate Limits (relaxed for testnet) ===
API_RATE_LIMIT=100
API_RATE_LIMIT_BY_KEY=200

# === Indexer Settings ===
INDEXER_DISABLE_PENDING_TRANSACTIONS_FETCHER=false
INDEXER_DISABLE_INTERNAL_TRANSACTIONS_FETCHER=false
FETCH_REWARDS_WAY=trace_block

# === Block Settings ===
FIRST_BLOCK=0
BLOCK_RANGES_BATCH_SIZE=100

# === Frontend ===
BLOCKSCOUT_HOST=localhost
BLOCKSCOUT_PROTOCOL=http

# === Debug (enable for testnet) ===
LOG_LEVEL=debug
SHOW_ADDRESS_MARKETCAP_PERCENTAGE=false
